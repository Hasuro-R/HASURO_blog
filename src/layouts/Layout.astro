---
import Header from '../components/Header/Header';
import ColorThemeProvider from '../middlewares/ColorThemeProvider';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="HASUROのブログ" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<ColorThemeProvider client:load>
			<Header client:load />
			<div class='all-wrappar'>
				<div class='all-container'>
					<slot />
				</div>
			</div>
		</ColorThemeProvider>
	</body>
</html>
<style is:global>
	:root {
		--primary-green: 88, 186, 137;
		--primary-yellow-green: 216, 223, 0;
		--primary-pink: 226, 56, 58;
		--primary-pale-pink: 238, 131, 133;
		--primary-gray: 145, 158, 153;

		--link-color: 0, 170, 235;

	}

	:root[color-theme='light'] {
		--background-color: 229, 236, 237;
		--background-theme-color: 255, 255, 255;

		--text-color: 0, 0, 0;
		--text-color-rgb: rgb(0, 0, 0);

		--justify-content: flex-start;

		--change-button-gradation: linear-gradient(135deg, rgba(233,70,85,1) 0%, rgba(243,163,130,1) 100%);

		--box-shadow: 0 0 1px rgb(var(--primary-pink)), 0 0 2px rgb(var(--primary-pink)), 0 0 3px rgb(var(--primary-pink)), 0 0 5px rgb(var(--primary-pale-pink));
	}

	:root[color-theme='dark'] {
		--background-color: 0, 0, 0;
		--background-theme-color: 26, 32, 35;

		--text-color: 255, 255, 255;
		--text-color-rgb: rgb(255, 255, 255);

		--justify-content: flex-end;

		--change-button-gradation: linear-gradient(135deg, rgba(88,186,137,1) 0%, rgba(216,223,0,1) 100%);

		--box-shadow: 0 0 1px rgb(var(--primary-green)), 0 0 2px rgb(var(--primary-green)), 0 0 3px rgb(var(--primary-green)), 0 0 5px rgb(var(--primary-yellow-green));
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	html,
	body {
		font-family: system-ui, sans-serif;
		max-width: 100vw;
		min-height: 100vh;
		overflow-x: hidden;
		color: var(--text-color-rgb);
		background-color: rgb(var(--background-color));
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.all-wrappar {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
	}

	.all-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
		padding-top: 60px;
        @media screen and (min-width: 1100px) {
            width: 1100px;
        }
    }

	.fill-link {
		width: 100%;
	}
</style>
